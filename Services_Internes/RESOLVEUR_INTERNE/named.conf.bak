options {
        directory "/var/cache/bind";

        allow-recursion {
                127.0.0.1/32;
                192.168.0.0/24;
                192.168.2.0/24;
                192.168.3.0/24;
                192.168.4.0/24;
                192.168.5.0/24;
        };

        listen-on {
                127.0.0.1;//localhost
                192.168.0.1;//remplacer par adresse du VPS
        };

        listen-on port 53 {any;};
        listen-on-v6 { none; };

        pid-file "/var/run/named/named.pid";

        allow-transfer { none; };

        dnssec-validation no;
        dnssec-enable no;
		
};


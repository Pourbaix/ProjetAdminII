// Zone interne qui envoie les requetes au SOA
zone "intranet.ephec-ti.be"{
        type forward;
        forwarders {192.168.0.3;};//remplacer par adresse du VPS
        forward only;
};

// Zone reverse qui envoie les requetes inverse au SOA
zone "0.168.192.in-addr.arpa"{
    type forward;
    forwarders {192.168.0.3;};//remplacer par adresse du VPS
    forward only;
};